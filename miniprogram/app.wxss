/**app.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100%;
  box-sizing: border-box;
  background-color: #FFCCCC;
} 

.container-center {
  display: flex;
  flex-direction: column;
  min-height: 100%;
  justify-content: space-between;
  font-size: 32rpx;
  font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}

.container-border {
	/* height: 100%; */
	width: 90%;
	padding: 20rpx, 80rpx;
	box-sizing: border-box;
	background-color: rgba(255, 255, 255, 0.8);
	border-radius: 20rpx;
}

.container-border-1 {
	position: absolute;
	top: 0;
	left: 10rpx;
	height: 150%;
	width: 80rpx;
	box-sizing: border-box;
	background-color: rgba(255, 255, 255, 0.3);
	z-index: 0;
	border-radius: 20rpx;
}