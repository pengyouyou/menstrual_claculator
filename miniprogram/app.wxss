/**app.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100%;
  box-sizing: border-box;
  background-color: #FFCCCC;
} 

.container-center {
  display: flex;
  flex-direction: column;
  min-height: 100%;
  justify-content: space-between;
  font-size: 32rpx;
  font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}

.container-border {
	height: 100%;
	width: 90%;
	padding: 20rpx, 80rpx;
	box-sizing: border-box;
	background-color: white;
	opacity: 0.8;
	border-radius: 20rpx;
}

.container-border::before {
	height: 500rpx;
	width: 80rpx;
	box-sizing: border-box;
	background-color: white;
	opacity: 0.3;
	border-radius: 20rpx;
}