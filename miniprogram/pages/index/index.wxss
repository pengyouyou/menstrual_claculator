/**index.wxss**/

page {
  background: pink;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.disable {
  color: #888;
}

.service {
  position: fixed;
  right: 40rpx;
  bottom: 40rpx;
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  background: linear-gradient(#007aff, #0063ce);
  box-shadow: 0 5px 10px rgba(0, 0, 0, 0.3);
  display: flex;
  align-content: center;
  justify-content: center;
  transition: all 300ms ease;
}

.service-button {
  position: absolute;
  top: 40rpx;
}

.service:active {
  box-shadow: none;
}

.request-text {
  padding: 20rpx 0;
  font-size: 24rpx;
  line-height: 36rpx;
  word-break: break-all;
}

.calendar {
  width: 100%;
  /* padding: 20rpx 20rpx 20rpx 0; */
  display: flex;
  align-content: center;
  justify-content: center;
  box-sizing: border-box;
}

.calendar-style {
    /* background-color: #eeedff; */
    /* padding-top: 10px; */
	width: 660rpx;
}

.calendar-header {
    font-size: large; /*修改了标题文字和按钮的大小*/
	padding-top: 20rpx;
	padding-bottom: 15rpx;
    /* background-color: #605eac;
	width: 100%;
	border-radius: 5rpx;
	box-sizing: content-box; */
	border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}

.item-text {
	font-size: 22rpx;
	color: #000000;
}


.userinfo-avatar:after {
  border: none;
}

.flex-wrp{
  margin-top: 10rpx;
  width: 100%;
  display:flex;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
}

.flex-item-container {
  width: 100%;
  /* height: 80rpx; */
  padding: 20rpx;
  /* margin-bottom: 30rpx; */
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  /* border: 1px solid rgba(0, 0, 0, 0.1); */
}

.item-dot {
  width: 20rpx;
  height: 20rpx;
  margin-right: 8rpx;
  border-radius: 50%;
  background-size: cover;
  /* background-color: rgb(43, 255, 0); */
}

.setting-button {
	width: 92%;
	height: 104rpx;
	line-height: 104rpx;
	margin-top: 30rpx;
	/* margin-bottom: 30rpx; */
	background-color: rgba(255, 255, 255, 0.8);
	/* align-content: center; */
	border-radius: 16rpx;
	box-sizing: border-box;
	
	/* vertical-align:middle; */
	/* border: 1px solid rgba(255, 255, 255, 1); */
}

.container-tips {
	width: 92%;
	display: flex;
	flex-direction: column;
	/* align-items: left; */
	box-sizing: border-box;
	background-color: pink;

	padding: 2rpx 20rpx 20rpx;
	
	border-radius: 16rpx;
	border: 1px solid rgba(255, 255, 255, 1);
	margin-bottom: 30rpx;
}

.tips-text {
	font-size: 22rpx;
	color: #333333;
}

.share-text {
	font-size: 24rpx;
	color: white;
    margin-bottom: 30rpx;
    border-bottom: 1px solid rgba(255, 255, 255, 1);
    padding-bottom: 1rpx;
    padding-top: 30rpx;
}

.share-btn {
    /* width: 60%; */
	font-size: 24rpx;
    height: 70rpx;
    line-height: 70rpx;
	color: white;
    background-color: pink;
    margin-bottom: 30rpx;
    border-bottom: 1px solid white;
    padding: 17rpx 0 1rpx;
    border-radius: 0;
    /* opacity: 0.1; */
}

.share-btn::after{
    border-top: 0;
    border-right: 0;
    border-left: 0;
    outline:none;
    list-style: none;
    box-shadow: none;
}

