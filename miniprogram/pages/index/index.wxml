<!--index.wxml-->
<view class="container">

    <view class="container-border">
		<!-- <view class=".container-border-1"/> -->

        <!-- 日历 -->
        <view class="calendar">
            <calendar calendar-style="calendar-style" header-style="calendar-header" show-more-days="{{false}}" weeks-type="cn" cell-size="44" lunar="{{false}}" days-color="{{days_color}}" bindnextMonth="onNextMonth" bindprevMonth="onPrevMonth" binddateChange="onDateChange" binddayClick="onDayClick"></calendar>
        </view>

        <view class="flex-wrp" style="flex-direction:row;">
            <block wx:for-items="{{info}}" wx:for-item="infoitem" wx:key="key">
                <view class="flex-item-container">
                    <view class="item-dot" style="background-color: {{infoitem.color}}"></view>
                    <text class="item-text">{{infoitem.desc}}</text>
                </view>
            </block>
        </view>
    </view>

    <button class="setting-button" bindtap="onSetting">设置</button>
</view>